@AbapCatalog.viewEnhancementCategory: [#NONE]
@AccessControl.authorizationCheck: #NOT_REQUIRED
@EndUserText.label: 'Backflush Value Help'
@Metadata.ignorePropagatedAnnotations: true
@ObjectModel.usageType:{
    serviceQuality: #X,
    sizeCategory: #S,
    dataClass: #MIXED
}

@ObjectModel.resultSet.sizeCategory: #XS


define view entity ZI_BackflushVH
  as select from dd07t
{
      @ObjectModel.text.element: ['BackflushText']
  key cast ( domvalue_l as rgekm ) as Backflush,

      @Semantics.text: true
      ddtext                       as BackflushText
}
where
      domname    = 'RGEKM'
  and ddlanguage = $session.system_language
